# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Auth
JWT_SECRET=replace-with-long-random-secret
ADMIN_PASSWORD=replace-with-strong-admin-password

# OpenAI API (e.g. for Sage X3 AI Consultant)
OPENAI_API_KEY=replace-with-openai-api-key

# Anthropic Claude API
ANTHROPIC_API_KEY=replace-with-anthropic-api-key

# GitHub (optional; for API or tooling)
GITHUB_TOKEN=replace-with-github-token-if-needed

# AWS S3 (for proposal PDF storage)
AWS_ACCESS_KEY_ID=replace-with-aws-access-key-id
AWS_SECRET_ACCESS_KEY=replace-with-aws-secret-access-key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=financeflo-proposals

# GoHighLevel webhook
GHL_WEBHOOK_URL=https://example.com/webhook

# Voyage AI (embeddings for knowledge base)
VOYAGE_API_KEY=replace-with-voyage-api-key

# Worker
WORKER_POLL_INTERVAL=5000

# Server
PORT=10000
NODE_ENV=development
